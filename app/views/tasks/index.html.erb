<h2>Todo list</h2>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed? %>
        <input type="checkbox" checked>
      <% else %>
        <input type="checkbox">
      <% end %>
      <%= link_to "#{task.title}", task_path(task) %>
    </li>
  <% end %>
</ul>

<%= link_to "+Create a new task", "/tasks/new" %>
